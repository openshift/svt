{
  "Kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "statefulsetTemplate",
    "creationTimestamp": null,
    "annotations": {
      "description": "This template will create a statefulset and a headless service.",
      "tags": ""
    }
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "nginx${IDENTIFIER}",
        "labels": {
          "app": "nginx"
        }
      },
      "spec": {
        "ports": [
          {
            "port": "${PORT}",
            "name": "web"
          }
        ],
        "clusterIP": "None",
        "selector": {
          "app": "nginx${IDENTIFIER}"
        }
      }
    },
    {
      "apiVersion": "apps/v1beta1",
      "kind": "StatefulSet",
      "metadata": {
        "name": "web${IDENTIFIER}"
      },
      "spec": {
        "serviceName": "nginx${IDENTIFIER}",
        "replicas": 2,
        "template": {
          "metadata": {
            "labels": {
              "app": "nginx${IDENTIFIER}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "nginx",
                "image": "${IMAGE}",
                "ports": [
                  {
                    "containerPort": "${PORT}",
                    "name": "web"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "www",
                    "mountPath": "/mydata"
                  }
                ]
              }
            ]
          }
        },
        "volumeClaimTemplates": [
          {
            "metadata": {
              "name": "www"
            },
            "spec": {
              "accessModes": [
                "ReadWriteOnce"
              ],
              "resources": {
                "requests": {
                  "storage": "1Gi"
                }
              },
              "storageClassName": "gp2"
            }
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "name": "IDENTIFIER",
      "description": "Number to append to the name of resources",
      "value": "1",
      "required": false
    },
    {
      "name": "IMAGE",
      "description": "image",
      "value": "openshift/hello-openshift",
      "required": false
    },
    {
      "name": "PORT",
      "description": "port",
      "value": "8080",
      "required": false
    }
  ]

}


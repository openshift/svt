{ 
    "apiVersion": "v1", 
    "kind": "ReplicationController", 
    "metadata": { 
        "name": "frontend-1" 
    }, 
    "spec": { 
        "replicas": 1, 
        "selector": { 
            "name": "frontend" 
        }, 
        "template": { 
            "metadata": { 
                "labels": { 
                    "name": "frontend" 
                } 
            }, 
            "spec": { 
                "containers": [ 
                    { 
                        "image": "openshift/hello-openshift", 
                        "name": "helloworld", 
                        "ports": [ 
                            { 
                                "containerPort": 8080, 
                                "protocol": "TCP" 
                            } 
                        ] 
                    } 
                ], 
                "restartPolicy": "Always" 
            } 
        } 
    } 
}

[global]
bs=4k,128k,4096k
direct=0
sync=0
fsync_on_close=1
time_based=1
runtime=150
clocksource=clock_gettime
ramp_time=10
startdelay=20

[fio]
filename=/var/lib/fio/test
rw=write
size=4g
write_bw_log=fio
write_iops_log=fio
write_lat_log=fio
write_hist_log=fio
numjobs=1
per_job_logs=1
log_avg_msec=60000
log_hist_msec=60000